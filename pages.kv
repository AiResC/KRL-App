                    background_down: 'images/home_down.png'
                    on_release: root.transition.duration=0.0001 ; root.current = 'Вибір класу(Бібліотека)'
            BoxLayout:
                orientation:'vertical'
                padding:'7dp','5dp','7dp','5dp'
                spacing:'2dp'
                BookButton:
                    size_hint:(1,.2)
                    book:'Математика'
