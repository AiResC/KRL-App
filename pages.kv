    Screen:
        name:'11 клас(Бібліотека)'
        id:'11thA'
        BoxLayout:
            orientation: 'vertical'
            #Екшн бар, з кнопкою "назад" та надписом назви екрану
            BoxLayout:
                size_hint: 1, None
                height: '40dp'
                screen_manager: None
                canvas.before:
                    Color:
                        rgba: .9,.9,.9,1
                    Rectangle:
